@using CashMe.Shared.Models
@using CaptchaMvc.HtmlHelpers
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập - Cash4Fun";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Đăng nhập - Cash4Fun</title>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/icon" href="./images/favicon.ico" />
    <!-- Bootstrap -->
    <link href="~/Content/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Content/css/custom.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form">
                <section class="login_content">
                    <h1><a href="index.html" class="site_title"><i class="fa fa-adjust"></i> <span class="logo-f">Cash4<span class="logo-s">Fun</span></span></a></h1>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <h1>Login Form</h1>
                        @*<hr />*@
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @Html.TextBoxFor(m => m.cUserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.cUserName, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.cPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.cPassword, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.Captcha(4)
                        </div>
                        <div class="text-left">
                            <button class="btn btn-info submit" type="submit">Đăng nhập</button>
                            <a class="reset_pass" href="/Account/ForgotPassword">Quên mật khẩu?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">

                            @*<div class="text-center">
                                <a class="btn btn-facebook">Login with Facebook<i class="fa fa-facebook"></i></a>
                            </div>*@

                            <p class="change_link" style="margin-top: 30px;">
                                Chưa có tài khoản?
                                <a href="/Account/Register" class="to_register"> Đăng ký! </a>
                            </p>

                        </div>

                    }

                    <div>
                        <p style="color: #999;">© 2017 All Rights Reserved. Cash4Fun Template</p>
                    </div>
                </section>
            </div>

        </div>
    </div>
</body>
</html>
