@model CashMe.Shared.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="right_col" role="main">
    <div style="margin-top:50px">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">


                        <h3>Đổi mật khẩu</h3>
                        
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Change</button>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


