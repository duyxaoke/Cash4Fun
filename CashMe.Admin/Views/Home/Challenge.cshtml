@using CashMe.Service.Models

@{
    ViewBag.Title = "Đua top - Cash4Fun";
}
@{
    var lsTOP_Week = ViewBag.lsReportTOP_Week as IEnumerable<ReportTOPModel>;
    var lsTOP_Month = ViewBag.lsReportTOP_Month as IEnumerable<ReportTOPModel>;
    int x = 1, y = 1;
}

<div class="right_col" role="main">
    <div style="margin-top:50px">


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">

                        <div class="dashboard-widget-content">
                            <div class="col-md-6">
                                <h5 class="text-center"><strong>DANH SÁCH THÀNH VIÊN DẪN ĐẦU (2 TUẦN)</strong> <br />
                                (Từ 06/08/2017 - đến 19/08/2017)</h5>
                                <table id="" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>UserName</th>
                                            <th>Hình ảnh làm được</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @foreach (var item in lsTOP_Week)
                                        {
                                        <tr>
                                            <td>@x</td>
                                            <td>@item.UserName</td>
                                            <td>@item.CountImage</td>
                                        </tr>
                                            x++;
                                        }
                                    </tbody>
                                </table>

                            </div>
                            <div class="col-md-6">
                                <h5 class="text-center">
                                    <strong>DANH SÁCH THÀNH VIÊN DẪN ĐẦU (THÁNG) </strong><br />
                                    (Từ 01/08/2017 - đến 31/08/2017)
                                </h5>
                                <table id="" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>UserName</th>
                                            <th>Hình ảnh làm được</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @foreach (var item in lsTOP_Month)
                                        {
                                        <tr>
                                            <td>@y</td>
                                            <td>@item.UserName</td>
                                            <td>@item.CountImage</td>
                                        </tr>
                                            y++;
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>