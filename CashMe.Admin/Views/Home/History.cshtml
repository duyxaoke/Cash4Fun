@model IEnumerable<CashMe.Core.Data.Payment>
@{
    ViewBag.Title = "Lịch sử thanh toán - Cash4Fun";
}

<div class="right_col" role="main">
    <div style="margin-top:50px">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">


                        <h3>Lịch sử thanh toán</h3>

                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Thời gian</th>
                                    <th>Chi tiết giao dịch</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CreateDate.ToString("dd-MM-yyyy hh:mm:ss")</td>
                                        <td>@{if (item.TypePayment != 1)
                                            { <span>Mã giao dịch trong mail:@("93658222D" + item.Id)</span>;
                                            }
                                            else { @Html.Raw(item.Content); } }</td>
                                        <td>@item.Amount</td>
                                        <td>
                                            @if (item.Status == 0)
                                            {
                                                <span class="badge bg-orange">Pending</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-blue">Completed</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

